<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Banco_Sisaov" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Banco_Sisaov" parent="Base.Theme.Banco_Sisaov" />

    <style name="MiEstilo">


    </style>

    <style name="MiEstilo.fondo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lila</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MiEstilo.imagenFondo">
        <item name="android:alpha">0.6</item>
        <item name="android:src">@drawable/bg_welcome</item>
    </style>

    <style name="MiEstilo.textos">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/grisLetras</item>
    </style>

    <style name="MiEstilo.textos.titulos">
        <item name="android:textSize">@dimen/textSize_Title</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <style name="MiEstilo.cardView">
        <item name="android:clickable">true</item>
        <item name="strokeColor">@color/blueCenizo</item>
    </style>

    <style name="MiEstilo.botones">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/textSize_botones</item>
        <item name="android:textColor">@color/grisLetras</item>
        <item name="android:backgroundTint">@color/blueCenizo</item>
    </style>

    <style name="MiEstilo.botones.menu_main">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cornerRadius">13dp</item>
    </style>

    <style name="MiEstilo.textoEditable" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="helperText">@string/obligatorio</item>
        <item name="android:textColorHint">@color/grisLetras</item>
        <item name="helperTextTextColor">@color/grisLetras</item>
        <item name="boxStrokeColor">@color/blueCenizo</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MiEstilo.textoEditableEscrito">
        <item name="android:textColor">@color/grisLetras</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MiEstilo.bottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:backgroundTint">@color/blueCenizo</item>
        <item name="navigationIcon">@drawable/ic_menu</item>
    </style>

    <style name="MiEstilo.botones.flotante">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>

</resources>