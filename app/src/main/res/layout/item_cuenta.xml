<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_inner_CardView"
        android:src="@drawable/ic_banco"
        android:contentDescription="@string/icono_del_banco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txt_numCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MiEstilo.textos"
        android:text="12345678908765432345678"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_margin="@dimen/margin_inner_CardView"/>

    <TextView
        android:id="@+id/txt_dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="@dimen/margin_inner_CardView"
        app:layout_constraintTop_toBottomOf="@id/txt_numCuenta"
        style="@style/MiEstilo.textos"
        android:text="njdsfnewnf"/>

</androidx.constraintlayout.widget.ConstraintLayout>