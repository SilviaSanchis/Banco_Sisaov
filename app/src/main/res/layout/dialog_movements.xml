<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueCenizo"
    android:id="@+id/dialgo">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/detalle_del_movimiento"
        style="@style/MiEstilo.textos.titulos"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_banco"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Titulo"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_descripcion"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toBottomOf="@+id/tv_Titulo"
        android:text="@string/dialogo_descripcion_movimeinto"
        android:layout_margin="10dp"
        style="@style/MiEstilo.textos"/>

</androidx.constraintlayout.widget.ConstraintLayout>